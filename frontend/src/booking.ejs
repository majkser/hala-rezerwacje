<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Book a Hall</title>
    <script src="https://cdn.tailwindcss.com"></script>
  </head>
  <body class="bg-gray-50">
    <!-- Navbar -->
    <nav class="bg-blue-600 text-white shadow-lg">
      <div
        class="container mx-auto px-6 py-4 flex justify-between items-center"
      >
        <a href="/logged" class="text-2xl font-bold">SportHall</a>
        <div class="space-x-4">
          <span class="text-white"><%= username %></span>
          <a
            href="/logout"
            class="bg-white text-blue-600 px-4 py-2 rounded-lg hover:bg-gray-100"
            >Logout</a
          >
        </div>
      </div>
    </nav>

    <!-- Booking Section -->
    <div class="container mx-auto px-6 py-16">
      <h1 class="text-3xl font-bold text-center mb-12">
        Book Your Sports Hall
      </h1>

      <form
        action="/booking/submit"
        method="POST"
        class="max-w-2xl mx-auto bg-white p-8 rounded-lg shadow-md"
      >
        <div class="space-y-6">
          <!-- Hall Selection -->
          <div>
            <label class="block text-sm font-medium text-gray-700 mb-2"
              >Select Hall</label
            >
            <select
              id="hallSelect"
              name="hall_id"
              required
              class="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500"
            >
              <option value="1">Main Sports Hall</option>
              <option value="2">Training Hall</option>
              <option value="3">Group Exercise Room</option>
            </select>
          </div>

          <!-- Date Selection -->
          <div>
            <label class="block text-sm font-medium text-gray-700 mb-2"
              >Select Date</label
            >
            <input
              id="dateSelect"
              type="date"
              name="date"
              onchange="fetchTimes()"
              required
              min="<%= new Date().toISOString().split('T')[0] %>"
              class="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500"
            />
          </div>

          <!-- Time Selection -->
          <div>
            <label class="block text-sm font-medium text-gray-700 mb-2"
              >Select Start Time</label
            >
            <select
              id="timeSelect"
              name="timeStart"
              onchange="fetchEndTimes()"
              required
              class="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500"
            >
              <option value="">Select date and hall first</option>
            </select>
          </div>

          <div>
            <label class="block text-sm font-medium text-gray-700 mb-2"
              >Select End Time</label
            >
            <select
              id="endTimeSelect"
              name="timeEnd"
              required
              class="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500"
            >
              <option value="">Select start time first</option>
            </select>
          </div>

          <!-- Submit Button -->
          <button
            type="submit"
            class="w-full bg-blue-600 text-white py-2 px-4 rounded-md hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:ring-offset-2 transition-colors duration-200"
          >
            Book Now
          </button>
        </div>
      </form>
    </div>

    <!-- Footer -->
    <footer class="bg-gray-800 text-white py-8 mt-auto fixed bottom-0 w-full">
      <div class="container mx-auto px-6">
        <div class="flex flex-col md:flex-row justify-between">
          <div class="mb-6 md:mb-0">
            <h3 class="text-xl font-semibold mb-4">Contact Us</h3>
            <p>Email: contact@sporthall.com</p>
            <p>Phone: +48 123 456 789</p>
          </div>
          <div>
            <h3 class="text-xl font-semibold mb-4">Follow Us</h3>
            <div class="flex space-x-4">
              <a href="#" class="hover:text-gray-300">Facebook</a>
              <a href="#" class="hover:text-gray-300">Instagram</a>
              <a href="#" class="hover:text-gray-300">Twitter</a>
            </div>
          </div>
        </div>
      </div>
    </footer>
  </body>
  <script src="./js/booking.js"></script>
</html>
